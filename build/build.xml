<?xml version="1.0" ?>
<project default="package" xmlns="http://nant.sf.net/release/0.85/nant.xsd">
	<property name="bin" value="../bin"/>
	<property name="src" value="../src"/>
	<property name="version" value="0.1.2.0"/>
	<tstamp property="today" pattern="yyMMdd"/>
	<target name="package" description="make package">
		<mkdir dir="${bin}/${version}"/>
		<delete>
			<fileset basedir="${bin}/${version}">
				<include name="gaelwin*.zip"/>
			</fileset>
		</delete>
		<zip zipfile="${bin}/${version}/gaelwin_${version}.zip">
			<fileset basedir="${src}/GoogleAppEngineLauncher/bin/Release">
				<include name="GoogleAppEngine.dll"/>
				<include name="GoogleAppEngineLauncher.exe"/>
			</fileset>
			<fileset basedir="${src}">
				<include name="*.txt"/>
			</fileset>
		</zip>
		<zip zipfile="${bin}/${version}/gaelwin_src_${version}.zip">
			<fileset basedir="${src}" prefix="src">
				<exclude name="**/*.suo"/>
				<exclude name="**/*.user"/>
				<exclude name="**/obj"/>
				<exclude name="**/obj/**"/>
				<exclude name="**/bin"/>
				<exclude name="**/bin/**"/>
				<include name="**/*"/>
			</fileset>
		</zip>
	</target>
</project>